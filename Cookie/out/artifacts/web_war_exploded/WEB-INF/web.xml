<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://java.sun.com/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
		  http://java.sun.com/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <welcome-file-list>
        <welcome-file>login.html</welcome-file>
    </welcome-file-list>

    <servlet>
        <servlet-name>LastVisitedTime</servlet-name>
        <servlet-class>servlet.LastVisitedTime</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ProductInfo</servlet-name>
        <servlet-class>servlet.ProductInfo</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ClearHistory</servlet-name>
        <servlet-class>servlet.ClearHistory</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>LastVisitedTime</servlet-name>
        <url-pattern>/LastVisitedTime</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ProductInfo</servlet-name>
        <url-pattern>/ProductInfo</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ClearHistory</servlet-name>
        <url-pattern>/ClearHistory</url-pattern>
    </servlet-mapping>

</web-app>
